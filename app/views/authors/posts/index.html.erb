
<h4 class='d-flex justify-content-between md-4'>
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary'%>
</h4>


<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
  <div class="card text-black md-3" >
      <div class="card-body">
        <h5 class='card-title md-1 text-dark'><%= post.title %></h5>
        <p class='card-text-secondary md-0'><%= post.description %></p>
      </div>
  </div>
  <% end %>
<% end %>
